<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bubble_topic_screen_background"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    tools:context=".BubbleMatchSelectionPage">


    <ImageButton
        android:id="@+id/bubbleTopicEssential"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="bubbleTopicEssential"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:0.9"
        app:layout_constraintBottom_toTopOf="@+id/bubbleTopicGuidelineBottom"
        app:layout_constraintEnd_toStartOf="@+id/bubbleTopicGuidelineMidLeft"
        app:layout_constraintStart_toStartOf="@+id/bubbleTopicGuidelineLeft"
        app:layout_constraintTop_toTopOf="@+id/bubbleTopicGuidelineTop"/>

    <ImageButton
        android:id="@+id/bubbleTopicColours"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bubble_colours_button"
        android:contentDescription="bubbleTopicColours"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:0.9"
        app:layout_constraintBottom_toTopOf="@+id/bubbleTopicGuidelineBottom"
        app:layout_constraintEnd_toStartOf="@+id/bubbleTopicGuidelineMidLeft"
        app:layout_constraintStart_toStartOf="@+id/bubbleTopicGuidelineLeft"
        app:layout_constraintTop_toTopOf="@+id/bubbleTopicGuidelineTop"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bubbleTopicGuidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bubbleTopicGuidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bubbleTopicGuidelineMidLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bubbleTopicGuidelineMidRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bubbleTopicGuidelineRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bubbleTopicGuidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.84"/>

</androidx.constraintlayout.widget.ConstraintLayout>